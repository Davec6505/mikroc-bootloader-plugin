{
  "name": "mikroc-pic32-bootloader",
  "displayName": "PIC32M Development Tools",
  "description": "Complete PIC32MZ development toolkit: bootloader flashing, config editor, XC32/MikroC project generator, pin manager",
  "version": "1.2.0",
  "publisher": "DavidCoetzee",
  "icon": "images/icon.png",
  "author": {
    "name": "Dave C"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Davec6505/mikroc-bootloader-plugin"
  },
  "bugs": {
    "url": "https://github.com/Davec6505/mikroc-bootloader-plugin/issues"
  },
  "homepage": "https://github.com/Davec6505/mikroc-bootloader-plugin#readme",
  "keywords": [
    "mikroc",
    "pic32",
    "bootloader",
    "flash",
    "microcontroller",
    "embedded",
    "hid",
    "usb"
  ],
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:mikroc-pic32-bootloader.flash",
    "onCommand:mikroc-pic32-bootloader.testConfigEditor",
    "onCommand:mikroc-pic32-bootloader.createXC32Project",
    "onCommand:mikroc-pic32-bootloader.createMikroCProject",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mikroc-pic32-bootloader.flash",
        "title": "PIC32M: Flash with Bootloader"
      },
      {
        "command": "mikroc-pic32-bootloader.testConfigEditor",
        "title": "PIC32M: Device Configuration Editor"
      },
      {
        "command": "mikroc-pic32-bootloader.createXC32Project",
        "title": "PIC32M: Generate XC32 Project"
      },
      {
        "command": "mikroc-pic32-bootloader.createMikroCProject",
        "title": "PIC32M: Generate MikroC Project"
      }
    ],
    "configuration": {
      "title": "MikroC PIC32 Bootloader",
      "properties": {
        "mikroc-pic32-bootloader.bootloaderPath": {
          "type": "string",
          "default": "",
          "description": "Path to the mikro_hb.exe bootloader executable (download from https://github.com/Davec6505/MikroC_bootloader)"
        },
        "mikroc-pic32-bootloader.xc32CompilerBinDir": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional: Override auto-detection. Set to the XC32 bin directory, for example: C:/Program Files/Microchip/xc32/v5.00/bin"
        },
        "mikroc-pic32-bootloader.dfpPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional: Override auto-detection. Set to the PIC32MZ-EF DFP folder, for example: C:/Program Files/Microchip/MPLABX/v6.25/packs/Microchip/PIC32MZ-EF_DFP/1.4.168 or C:/Microchip/packs/Microchip/PIC32MZ-EF_DFP/1.4.168"
        },
        "mikroc-pic32-bootloader.autoInstallBootloaderTool": {
          "type": "boolean",
          "default": true,
          "description": "Offer to download a bootloader CLI tool if no bootloaderPath is configured."
        },
        "mikroc-pic32-bootloader.hexFilePattern": {
          "type": "string",
          "default": "**/*.hex",
          "description": "Glob pattern to find .hex files in workspace"
        },
        "mikroc-pic32-bootloader.showStatusBarButton": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Flash PIC32' button in the status bar for quick access"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-templates",
    "copy-templates": "node -e \"require('fs').cpSync('src/templates', 'out/templates', {recursive: true})\" && node -e \"require('fs').cpSync('src/webview', 'out/webview', {recursive: true})\"",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  }
}
